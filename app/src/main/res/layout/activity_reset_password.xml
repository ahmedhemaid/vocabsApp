<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".Activities.ResetPassword">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/email"
        android:layout_marginBottom="50dp"
        />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Check your Email"
    android:textColor="#000"
    android:textSize="24dp"
    android:textStyle="bold"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weâ€™ve sent instructions on how to reset \n The password (also check the Spam folder)."
        android:gravity="center"
        android:textColor="#631078"
        />

    <Button
        android:id="@+id/go_to_email_btn"
        android:layout_width="315dp"
        android:layout_height="46dp"
        android:text="Go to email"
        android:onClick="GoToEmail"
        android:background="@drawable/reset_btn"
        android:textColor="#FFFFFF"
        android:textSize="16dp"
        android:layout_marginTop="50dp"
         />
</LinearLayout>