<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Practicing time"
        android:gravity="center"
        android:textSize="24sp"
        android:textColor="#A03DBA"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="select the best time for you to practice english\nYou will receive daily notification at the same time that you select"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:textColor="#A03DBA"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        >
<Spinner
    android:id="@+id/spinner"
    android:layout_width="150dp"
    android:layout_height="60dp"
    android:textColor="#A03DBA"
    />
        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="wrap_content"
            android:layout_height="60dp">
            <RadioButton
                android:id="@+id/am"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="am"
                android:textColor="#A03DBA"
                />
            <RadioButton
                android:id="@+id/pm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pm"
                android:textColor="#A03DBA"
                />

        </RadioGroup>
    </LinearLayout>
    <Button
        android:id="@+id/done_time"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Done"
        android:textAllCaps="false"
        android:background="@drawable/button_in_dialog"
        android:textColor="#FFFFFF"
        android:drawableLeft="@drawable/done"
        android:padding="10dp"
        android:drawablePadding="-20dp"
        android:layout_marginTop="20dp"
        ></Button>
</LinearLayout>